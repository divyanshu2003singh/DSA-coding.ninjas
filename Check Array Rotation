
public class Solution {

    public static int arrayRotateCheck(int[] arr){
    	//Your code goes here
        if(arr.length==0){
            return 0;
        }
        int min=arr[0],minindex=0;
        for(int i=0;i<arr.length;i++){
            if(min>arr[i]){
                min =arr[i];
                minindex=i;
            }
                
            
        }
        return minindex;
    

    }

}
